#~/.config/neomutt/neomuttrc
#local ~/mail folder retrieved by getmail ~/.getmailrc

set config_charset  = "utf-8:iso-8859-1"

source ~/.config/neomutt/color
source ~/.config/neomutt/keybind

#Receive options
set mbox_type       = maildir
set folder          = "~/mail"
#set mask           = ".*"        ##hides dotfiles
set mbox            = "+derrick"
set record          = "+sent"
set postponed       = "+drafts"
set spoolfile       = "+derrick"
set copy            = yes     #copy sent mail
set move            = yes     #move read mail
set delete          = yes     #delete mail on exit
set mark_old                #mark read emails
mailboxes   +derrick +info +me +other +__________________ +drafts +spam +sent

#Send options
set from            = "derrick@pilatesshanghai.com"
set sendmail        = "/usr/bin/msmtp"
set envelope_from   = yes

#Connection options
#set ssl_force_tls	=yes
#unset ssl_starttls

# Sort by newest conversation first.
set sort             = reverse-threads
#set sort		     = threads
set sort_aux         = last-date-received
#set sort_aux        = reverse-date-received
set strict_threads	 = yes
set thread_received	 = yes
#set sort_browser    = date


# Cache for speed
set header_cache        = ~/.config/neomutt/cache/headers
set message_cachedir    = ~/.config/neomutt/cache/bodies
set certificate_file    = ~/.config/neomutt/certificates

# Composition options
set smart_wrap
set edit_headers=   yes

#default apps for attachments
set mime_forward        =   yes
set mime_forward_rest   =   yes
set mailcap_path    =   ~/.config/neomutt/mailcap

#view html emails
auto_view text/html                                      # view html automatically
alternative_order text/plain text/enriched text/html     # save html for last

# Sidebar
set sidebar_visible =   yes
set sidebar_width   =   20
set sidebar_delim_chars     = '/.'
set sidebar_indent_string   = '  '
set sidebar_divider_char    = '|'
set mail_check_stats
set sidebar_format  =   '%B%?F?[%F]?%* %?N? %N?'

# Set index above pager
set pager_index_lines=4
